// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Livro {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  titulo          String
  autor           String
  isbn            String  @unique
  anoPublicacao   Int
  disponivel      Boolean @default(true)
}
